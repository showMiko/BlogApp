package com.soumik.practice.springbootpractice.user;

import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class UserResource {
	UserRepository repo;

	public UserResource(UserRepository repo) {
		super();
		this.repo = repo;
	}
	
	@GetMapping("/")
	public String rootPath()
	{
		return "Hello User";
	}
	@PostMapping("/users")
	public User addAUser(@RequestBody User user)
	{
		repo.save(user);
		System.out.print(user);
		return user;
	}
	@GetMapping("/users/{email}/{password}")
	public User showAllusers(@PathVariable String email, @PathVariable String password)
	{
		List<User> users=repo.findAll();
		for(User currUser:users)
		{
			if(currUser.getEmail().equals(email) && currUser.getPassword().equals(password))
				return currUser;
		}
		return null;
	}
}
